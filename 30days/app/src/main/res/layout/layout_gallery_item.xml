<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="DAY 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtDayNumber"
        android:gravity="center_horizontal"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorWord"
        android:fontFamily="sans-serif-condensed" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/layoutMain">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/abslady"
            android:id="@+id/imgViewPhoto"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="150dp"
            android:visibility="visible" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/layoutNoPhoto"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:srcCompat="@drawable/camera_icon_2"
                android:id="@+id/imageView21"
                android:tint="@color/colorLightGray" />

            <TextView
                android:text="no photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView27"
                android:gravity="center"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorLightGray"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

    </RelativeLayout>
</LinearLayout>