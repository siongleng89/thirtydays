<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="2dp"
    android:id="@+id/layoutOuterCircle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutDummyCircle">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:padding="20dp"
        android:id="@+id/layoutCircle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layoutInnerCircle"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layoutContentCircle"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="DAY 1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDay"
                    android:textAlignment="center"
                    android:layout_marginBottom="15dp"
                    android:textSize="45sp"
                    android:textColor="@color/colorDay"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="3% completed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCompleted"
                    android:textAlignment="center"
                    android:textColor="@color/colorDay" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
