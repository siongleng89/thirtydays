<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/fat_man"
            android:id="@+id/imgViewFat"
            android:layout_height="40dp" />

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressDay"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:minHeight="10dp"
            android:background="@color/colorBtnWord"
            android:max="30"
            android:progress="0"
            android:progressTint="@color/colorAccent"
            android:scrollbarSize="20dp"
            android:maxHeight="20dp"
            android:progressDrawable="@drawable/custom_progress_bar_horizontal"
            android:padding="2dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:srcCompat="@drawable/fit_man"
            android:id="@+id/imgViewFit" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="@string/summary_total_exercise_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textColor="@color/colorBtnWord"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTotalDuration"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:textStyle="normal|bold"
                    android:textColor="@color/colorBtnWord"
                    android:textAlignment="textEnd"
                    android:gravity="end" />

                <TextView
                    android:text="@string/min_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_weight="1"
                    android:textColor="@color/colorBtnWord"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="@string/summary_total_calories_burnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBtnWord"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTotalCalories"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:textStyle="normal|bold"
                    android:textColor="@color/colorBtnWord"
                    android:textAlignment="textEnd"
                    android:gravity="end" />

                <TextView
                    android:text="@string/kcal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorBtnWord"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>