<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="https://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.challenge.bennho.a30days.activities.MainActivity"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="15dp">

            <com.challenge.bennho.a30days.controls.LayoutDayCounter
                android:id="@+id/dayCounterControl"
                android:layout_width="250dp"
                android:layout_height="250dp"></com.challenge.bennho.a30days.controls.LayoutDayCounter>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/arrowleft"
                    android:id="@+id/imgViewPrevious"
                    android:layout_weight="1"
                    android:tint="@color/colorAction" />

                <TextView
                    android:text="@string/btn_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtStart"
                    android:layout_weight="1"
                    android:textSize="36sp"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:textColor="@color/colorAction" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/arrowleft"
                    android:id="@+id/imgViewNext"
                    android:layout_weight="1"
                    android:rotation="180"
                    android:tint="@color/colorAction"
                    android:alpha="1" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.challenge.bennho.a30days.controls.BottomBar
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/bottomBar">
        </com.challenge.bennho.a30days.controls.BottomBar>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/adLayout"
        android:background="#000">

    </RelativeLayout>

</LinearLayout>
