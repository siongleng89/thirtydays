<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Notifications Settings" >

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="EnableMealNotification"
            android:summary="Remind meal plan daily"
            android:title="Enable Meal Plan Notifications" >
        </CheckBoxPreference>

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="EnableNotification"
            android:summary="Remind me to run!"
            android:title="Enable Running Notifications" >
        </CheckBoxPreference>

        <ListPreference
            android:key="ReminderTime"
            android:title="Running Time"
            android:summary="%s"
            android:defaultValue="10"
            android:entries="@array/reminderTime"
            android:entryValues="@array/reminderTimeValues"
            />

        <com.challenge.bennho.a30days.controls.MultipleCheckboxPreference
            android:key="ReminderDay"
            android:title="Running Days"
            android:summary="%s"
            android:entries="@array/reminderDay"
            android:entryValues="@array/reminderDayValues"
            app:emptySelectedText="None"
            app:allSelectedText="Everyday">
        </com.challenge.bennho.a30days.controls.MultipleCheckboxPreference>
    </PreferenceCategory>

    <PreferenceCategory android:title="Personal Details" >

        <Preference
            android:key="Parameter"
            android:title="Your Parameter"
            android:summary="Tap to edit">

        </Preference>

    </PreferenceCategory>

</PreferenceScreen>



