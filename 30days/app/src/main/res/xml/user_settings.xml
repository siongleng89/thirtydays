<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="Notifications Settings" >

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="EnableNotification"
            android:summary="Remind me to run!"
            android:title="Enable Notifications" >
        </CheckBoxPreference>

        <ListPreference
            android:key="ReminderTime"
            android:title="Time"
            android:summary="%s"
            android:defaultValue="10"
            android:entries="@array/reminderTime"
            android:entryValues="@array/reminderTimeValues"
            />

        <com.challenge.bennho.a30days.controls.MultipleCheckboxPreference
            android:key="ReminderDay"
            android:title="Days"
            android:summary="%s"
            android:entries="@array/reminderDay"
            android:entryValues="@array/reminderDayValues"
            app:emptySelectedText="None"
            app:allSelectedText="Everyday">
        </com.challenge.bennho.a30days.controls.MultipleCheckboxPreference>
    </PreferenceCategory>

    <PreferenceCategory android:title="Personal Details" >

        <ListPreference
            android:key="Gender"
            android:title="Gender"
            android:summary="%s"
            android:entries="@array/gender"
            android:entryValues="@array/genderValues"
            />

        <ListPreference
            android:key="Unit"
            android:title="Unit"
            android:summary="%s"
            android:entries="@array/unit"
            android:entryValues="@array/unitValues"
            />

        <EditTextPreference
            android:key="Weight"
            android:title="Weight"
            android:summary="%s"/>

        <EditTextPreference
            android:key="Height"
            android:title="Height"
            android:summary="%s"/>

        <EditTextPreference
            android:key="Age"
            android:title="Age"
            android:summary="%s"/>


    </PreferenceCategory>

    <PreferenceCategory android:title="About" >
        <com.challenge.bennho.a30days.controls.UrlPreference
            android:key="button_voicemail_category_key"
            android:title="Version "
            android:summary="Version: 1.00"
            android:persistent="false">
        </com.challenge.bennho.a30days.controls.UrlPreference>
    </PreferenceCategory>

</PreferenceScreen>



