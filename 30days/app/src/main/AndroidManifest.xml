<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.challenge.bennho.a30days">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.LandingActivity" />
        <activity
            android:name=".activities.PersonalDetailActivity"
            android:label="Personal Detail" />
        <activity
            android:name=".activities.RunningActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activities.MainActivity"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".activities.HistoryActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.GraphActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.SettingsActivity"
            android:launchMode="singleInstance" />
        <activity android:name=".activities.ExerciseResultActivity"></activity>
        <activity
            android:name=".activities.ReadyActivity"
            android:label="Starting in"
            android:screenOrientation="portrait"></activity>

        <service android:name=".services.ExerciseService"></service>

        <activity android:name=".activities.TestActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>